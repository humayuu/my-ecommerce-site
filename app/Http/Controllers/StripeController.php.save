<?php

namespace App\Http\Controllers;

use Carbon\Carbon;
use App\Models\Order;
use App\Mail\OrderMail;
use App\Models\Orderitem;
use Illuminate\Http\Request;
use Illuminate\Support\Facades\Auth;
use Illuminate\Support\Facades\Mail;
use Illuminate\Support\Facades\Session;
use Gloudemans\Shoppingcart\Facades\Cart;


class StripeController extends Controller
{
    public function StripeOrder(Request $request)
    {
        try {
            // Get total amount
            if (Session::has('coupon')) {
                $totalAmount = Session::get('coupon')['total_amount'];
            } else {
                $totalAmount = round(Cart::total());
            }

            // Validate amount doesn't exceed Stripe's limit
            if ($totalAmount > 999999.99) {
                return back()->with([
                    'message' => 'Order amount exceeds maximum allowed limit',
                    'alert-type' => 'error'
                ]);
            }

            // Set Stripe API key (move this to .env file)
            \Stripe\Stripe::setApiKey(env('STRIPE_SECRET_KEY', 'sk_test_51RYCBsK3nIiUm93EDv4IwOipcAJpgRXyNILLDwu185jXETfNUGP2Ix6UztNv0jEllgZCrsoiUQrhkx6lVPErB0DR00G7ZhEcLO'));

            // Get the payment token from request (use Laravel's request object)
            $token = $request->stripeToken;
x
            // Create charge with correct amount (multiply by 100 for cents, not             $charge = \Stripe\Charge::create([
                'amount' => $totalAmount * 100, // Convert dollars to cents
                'currency' => 'usd',
                'description' => 'Order Payment',
                'source' => $token,
                'metadata' => ['order_id' => uniqid()]
            ]);

            // Create order record
            $order_id = Order::insertGetId([
                'user_id' => Auth::id(),
                'division_id' => $request->division_id,
                'district_id' => $request->district_id,
                'state_id' => $request->state_id,
                'name' => $request->name,
                'email' => $request->email,
                'phone' => $request->phone,
                'post_code' => $request->post_code,
                'notes' => $request->notes,

                'payment_type' => 'Stripe',
                'payment_method' => 'Stripe',
                'transaction_id' => $charge->balance_transaction,
                'currency' => $charge->currency,
                'amount' => $totalAmount,
                'order_number' => $charge->metadata->order_id,

                'invoice_no' => 'EOS' . mt_rand(10000000, 99999999),
                'order_date' => Carbon::now()->format('d F Y'),
                'order_month' => Carbon::now()->format('F'),
                'order_year' => Carbon::now()->format('Y'),
                'status' => 'pending',
                'created_at' => Carbon::now(),
            ]);
            // Start Send Email Add commentMore actions
            $invoice = Order::findOrFail($order_id);
            $data = [
                'invoice_no' => $invoice->invoice_no,
                'amount' => $totalAmount,
                'name' => $invoice->name,
                'email' => $invoice->email,
            ];

            Mail::to($request->email)->send(new OrderMail($data));

            // End Send Email



            // Create order items
            $carts = Cart::content();
            foreach ($carts as $cart) {
                OrderItem::insert([
                    'order_id' => $order_id,
                    'product_id' => $cart->id,
                    'color' => $cart->options->color ?? null,
                    'size' => $cart->options->size ?? null,
                    'qty' => $cart->qty,
                    'price' => $cart->price,
                    'created_at' => Carbon::now(),
                ]);
            }

            // Clean up session and cart
            if (Session::has('coupon')) {
                Session::forget('coupon');
            }
            Cart::destroy();

            $notification = [
                'message' => 'Your Order Placed Successfully',
                'alert-type' => 'success'
            ];

            return redirect()->route('dashboard')->with($notification);
        } catch (\Stripe\Exception\CardException $e) {
            // Card was declined
            $notification = [
                'message' => 'Payment failed: ' . $e->getError()->message,
                'alert-type' => 'error'
            ];
            return back()->with($notification);
        } catch (\Stripe\Exception\RateLimitException $e) {
            // Too many requests to Stripe API
            $notification = [
                'message' => 'Payment processing failed. Please try again.',
                'alert-type' => 'error'
            ];
            return back()->with($notification);
        } catch (\Stripe\Exception\InvalidRequestException $e) {
            // Invalid parameters
            $notification = [
                'message' => 'Invalid payment request. Please check your details.',
                'alert-type' => 'error'
            ];
            return back()->with($notification);
        } catch (\Stripe\Exception\AuthenticationException $e) {
            // Authentication failed
            $notification = [
                'message' => 'Payment authentication failed.',
                'alert-type' => 'error'
            ];
            return back()->with($notification);
        } catch (\Stripe\Exception\ApiConnectionException $e) {
            // Network communication failed
            $notification = [
                'message' => 'Network error. Please try again.',
                'alert-type' => 'error'
            ];
            return back()->with($notification);
        } catch (\Stripe\Exception\ApiErrorException $e) {
            // Generic Stripe error
            $notification = [
                'message' => 'Payment processing failed. Please try again.',
                'alert-type' => 'error'
            ];
            return back()->with($notification);
        } catch (\Exception $e) {
            // Something else happened
            $notification = [
                'message' => 'An unexpected error occurred. Please try again.',
                'alert-type' => 'error'
            ];
            return back()->with($notification);
        }
    }
}
